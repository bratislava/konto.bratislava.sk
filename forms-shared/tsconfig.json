{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "es2022",
    "target": "es2022",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist"
  },
  "include": ["./src/**/*", "./tests/**/*", "./scripts/**/*", "./test-utils/**/*"]
}
