{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "projects": {
    "generate-api-spec": {
      "type": "application",
      "sourceRoot": "src",
      "entryFile": "generate-api-spec",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.build-generate-api-spec.json"
      }
    }
  },
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": true
        }
      }
    ]
  }
}
