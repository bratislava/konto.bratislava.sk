<!DOCTYPE html>
<html lang="sk">
<head>
    <style>
        * {
            font-family: 'Work Sans', sans-serif;
            box-sizing: border-box;
        }

        h1 {
            font-size: 14px;
            line-height: 20px;
            font-weight: 600;
            margin: 12px 0 15px;
        }

        h2 {
            font-size: 11px;
            line-height: 15px;
            font-weight: 600;
            margin: 20px 0 12px;
        }

        .user-info {
            width: 520px;
        }
        .user-info--title {
            font-size: 11px;
            line-height: 15px;
            font-weight: 600;
            margin-bottom: 10px;
        }
        .user-info--title .user-info__block--right {
            padding-left: 15px;
        }
        .user-info__block {
            display: table-cell;
            width: 260px;
            padding: 0 10px 0 0;
        }
        .user-info__block--right {
            padding: 0 0 0 10px;
        }
        .user-info__block--dashed {
            border-left: 1px dashed #333231;
        }
        .user-info__description {
            font-size: 10px;
            line-height: 12px;
            font-weight: 400;
            margin-bottom: 10px;
        }
        .user-info__row {
            width: 255px;
            margin-bottom: 5px;
        }
        .user-info__row--label {
            display: table-cell;
            width: 100px;
            font-size: 10px;
            line-height: 12px;
            font-weight: 400;
        }
        .user-info__row--value {
            display: table-cell;
            width: 160px;
            font-size: 11px;
            line-height: 15px;
            font-weight: 400;
        }

        .tax-total {
            width: 520px;
            padding: 15px 30px;
            border-radius: 8px;
            background: #F6F6F6;
        }
        .tax-total__row {
            width: 460px;
            margin-bottom: 8px;
            font-size: 11px;
            line-height: 15px;
            font-weight: 400;
        }
        .tax-total__row--total {
            font-size: 11px;
            line-height: 15px;
            font-weight: 600;
            margin-bottom: 0;
        }
        .tax-total__col {
            display: table-cell;
            width: 300px;
        }
        .tax-total__col--value {
            display: table-cell;
            width: 160px;
            text-align: right;
        }
        .tax-total__separator {
            width: 460px;
            margin-bottom: 10px;
            border-bottom: 1px dashed #333231;
        }

        .payment {
            width: 520px;
            margin: 20px 0;
        }
        .payment h1 {
            margin: 0 0 8px;
        }
        .payment__qr {
            display: table-cell;
            width: 140px;
            height: 180px;
            padding: 10px 20px 0;
            border-radius: 8px;
            background: #F6F6F6;
        }
        .payment__qr img {
            display: block;
            margin: 0 auto;
        }
        .payment__data-box {
            display: table-cell;
            width: 380px;
            padding-left: 20px;
        }
        .payment__data {
            width: 360px;
            height: 180px;
            padding: 10px 20px 20px;
            border-radius: 8px;
            background: #F6F6F6;
        }
        .payment__text {
            font-size: 11px;
            line-height: 15px;
            font-weight: 600;
        }
        .payment__text--small {
            font-size: 8px;
            line-height: 10px;
            font-weight: 400;
            margin-bottom: 8px;
        }
        .payment__text--red {
            color: #D71920;
            margin-bottom: 8px;
        }
        .payment__row {
            width: 360px;
        }
        .payment__row .payment__text {
            display: table-cell;
            width: 130px;
        }

        .installments__description {
            font-size: 10px;
            line-height: 12px;
            font-weight: 400;
            width: 270px;
            margin-bottom: 10px;
        }
        .installments__description strong {
            font-weight: 600;
        }
        .installments__description--bottom {
            font-size: 11px;
            line-height: 15px;
            font-weight: 600;
            margin-bottom: 10px;
        }
        .installments__row {
            width: 520px;
            margin-bottom: 8px;
            font-size: 11px;
            line-height: 15px;
            font-weight: 400;
        }
        .installments__row strong {
            font-weight: 600;
        }
        .installments__row--last {
            margin-bottom: 0;
        }
        .installments__col {
            display: table-cell;
            width: 300px;
        }
        .installments__col--right {
            display: table-cell;
            width: 220px;
            text-align: right;
            font-weight: 600;
        }
        .installments__separator {
            width: 520px;
            margin-bottom: 8px;
            border-bottom: 1px dashed #333231;
        }

        .table {
            width: 520px;
            font-size: 8px;
            line-height: 10px;
            font-weight: 400;
            margin-bottom: 8px;
        }
        .table__title {
            display: table-cell;
            font-weight: 500;
            width: 280px;
        }
        .table__title--wide {
            width: 380px;
        }
        .table__title--area {
            width: 100px;
            text-align: right;
        }
        .table__title--base {
            width: 80px;
            text-align: right;
        }
        .table__title--total {
            width: 60px;
            text-align: right;
        }
        .table__cell {
            display: table-cell;
            width: 320px;
        }
        .table__cell--wide {
            display: table-cell;
            width: 380px;
        }
        .table__cell--area {
            display: table-cell;
            width: 60px;
            text-align: right;
        }
        .table__cell--base {
            display: table-cell;
            width: 80px;
            text-align: right;
        }
        .table__cell--total {
            display: table-cell;
            width: 60px;
            text-align: right;
        }

        .total {
            width: 520px;
            padding: 5px 10px;
            background: #F6F6F6;
            border-radius: 8px;
            font-size: 11px;
            line-height: 15px;
            font-weight: 600;
            text-align: right;
        }
        .total__title {
            display: table-cell;
            width: 370px;
        }
        .total__value {
            display: table-cell;
            width: 130px;
        }
    </style>
    <title>PDF</title>
</head>
<body>
    <!-- Page 1 -->
    <img src="file://<%= logo %>" width="100" height="18" alt="logo" />
    <h1>HLAVNÉ MESTO SLOVENSKEJ REPUBLIKY BRATISLAVA</h1>
    <div class="user-info user-info--title">
        <div class="user-info__block">
            Správca dane
        </div>
        <div class="user-info__block user-info__block--right">
            Hlavné mesto Slovenskej republiky Bratislava<br>
            Primaciálne nám. 1, 814 99 Bratislava
        </div>
    </div>
    <div class="user-info">
        <div class="user-info__block">
            <div class="user-info__description">
                <%- t('pdf:userInfo.employee.description') %>
            </div>
            <div class="user-info__row">
                <div class="user-info__row--label">
                    <%= t('pdf:userInfo.employee.name') %>
                </div>
                <div class="user-info__row--value">
                    <%= user.employeeContact.name %>
                </div>
            </div>
            <div class="user-info__row">
                <div class="user-info__row--label">
                    <%= t('pdf:userInfo.employee.phone') %>
                </div>
                <div class="user-info__row--value">
                    <%= user.employeeContact.phoneNumber %>
                </div>
            </div>
            <div class="user-info__row">
                <div class="user-info__row--label">
                    <%= t('pdf:userInfo.employee.email') %>
                </div>
                <div class="user-info__row--value">
                    <%= user.employeeContact.email %>
                </div>
            </div>
        </div>
        <div class="user-info__block user-info__block--right user-info__block--dashed">
            <div class="user-info__row">
                <div class="user-info__row--label">
                    <%= t('pdf:userInfo.user.name') %>
                </div>
                <div class="user-info__row--value">
                    <%= user.name %>
                </div>
            </div>
            <div class="user-info__row">
                <div class="user-info__row--label">
                    <%= t('pdf:userInfo.user.address') %>
                </div>
                <div class="user-info__row--value">
                    <%= user.mainAddress.street %>,<br/>
                    <%= user.mainAddress.zip %> <%= user.mainAddress.city %>
                </div>
            </div>
            <div class="user-info__row">
                <div class="user-info__row--label">
                    <%= t('pdf:userInfo.user.id') %>
                </div>
                <div class="user-info__row--value">
                    <%= user.extId %>
                </div>
            </div>
        </div>
    </div>
    <h1><%= t('pdf:taxTitle') %></h1>
    <div class="tax-total">
        <div class="tax-total__row">
            <div class="tax-total__col">
                <%= t('pdf:taxTotal.grounds') %>
            </div>
            <div class="tax-total__col--value">
                <%= user.taxGrounds.toFixed(2).replace('.', ',') %> €
            </div>
        </div>
        <div class="tax-total__row">
            <div class="tax-total__col">
                <%= t('pdf:taxTotal.constructions') %>
            </div>
            <div class="tax-total__col--value">
                <%= user.taxConstructions.toFixed(2).replace('.', ',') %> €
            </div>
        </div>
        <div class="tax-total__row">
            <div class="tax-total__col">
                <%= t('pdf:taxTotal.apartments') %>
            </div>
            <div class="tax-total__col--value">
                <%= user.taxApartments.toFixed(2).replace('.', ',') %> €
            </div>
        </div>
        <div class="tax-total__separator"></div>
        <div class="tax-total__row tax-total__row--total">
            <div class="tax-total__col">
                <%= t('pdf:taxTotal.total') %>
            </div>
            <div class="tax-total__col--value">
                <%= user.tax.toFixed(2).replace('.', ',') %> €
            </div>
        </div>
    </div>
    <div class="payment">
        <div class="payment__qr">
            <h1><%= t('pdf:payment.qr.title') %></h1>
            <div class="payment__text--small">
                <%= t('pdf:payment.qr.description') %>
            </div>
            <img src="file://<%= qr %>" width="79" height="100" alt="qr-code" />
        </div>
        <div class="payment__data-box">
            <div class="payment__data">
                <h1><%= t('pdf:payment.data.title') %></h1>
                <div class="payment__text--small">
                    <%= t('pdf:payment.data.description') %>
                </div>
                <div class="payment__text">
                    <%= t('pdf:payment.data.slsp') %>
                </div>
                <div class="payment__text payment__text--red">
                    <%= t('pdf:payment.data.slspValue') %>
                </div>
                <div class="payment__text">
                    <%= t('pdf:payment.data.csob') %>
                </div>
                <div class="payment__text payment__text--red">
                    <%= t('pdf:payment.data.csobValue') %>
                </div>
                <div class="payment__row">
                    <div class="payment__text">
                        <%= t('pdf:payment.data.ks') %>
                    </div>
                    <div class="payment__text payment__text--red">
                        <%= t('pdf:payment.data.ksValue') %>
                    </div>
                </div>
                <div class="payment__row">
                    <div class="payment__text">
                        <%= t('pdf:payment.data.vs') %>
                    </div>
                    <div class="payment__text payment__text--red">
                        <%= user.variableSymbol %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <h1><%= t('pdf:installments.title') %></h1>
    <div class="installments__description">
        <%- t('pdf:installments.description1') %>
    </div>
    <div class="installments__description--bottom">
        <%= t('pdf:installments.description2') %>
    </div>
    <div class="installments__row">
        <div class="installments__col">
            <%- t('pdf:installments.first') %>
        </div>
        <div class="installments__col--right">
            <%= user.installments[0].total.toFixed(2).replace('.', ',') %> €
        </div>
    </div>
    <div class="installments__separator"></div>
    <div class="installments__row">
        <div class="installments__col">
            <%- t('pdf:installments.second') %>
        </div>
        <div class="installments__col--right">
            <%= user.installments[1].total.toFixed(2).replace('.', ',') %> €
        </div>
    </div>
    <div class="installments__separator"></div>
    <div class="installments__row installments__row--last">
        <div class="installments__col">
            <%- t('pdf:installments.third') %>
        </div>
        <div class="installments__col--right">
            <%= user.installments[2].total.toFixed(2).replace('.', ',') %> €
        </div>
    </div>

    <!-- Page 1 -->
    <img src="file://<%= logo %>" width="100" height="18" style="margin-top: 8px" alt="logo" />
    <h2><%= t('pdf:taxTotal.grounds') %></h2>
    <div class="table">
        <div class="table__title"><%= t('pdf:table.subject') %></div>
        <div class="table__title table__title--area"><%- t('pdf:table.area') %></div>
        <div class="table__title table__title--base"><%- t('pdf:table.base') %></div>
        <div class="table__title table__title--total"><%= t('pdf:table.total') %></div>
    </div>
    <% user.taxDetails.filter(item => item.type === 'GROUND').forEach(item => {%>
        <div class="table">
            <div class="table__cell">
                <%= t('pdf:' + item.name) %>
                <%= t('pdf:' + item.description) %>
            </div>
            <div class="table__cell--area">
                <%= item.area.toFixed(2).replace('.', ',') %>
            </div>
            <div class="table__cell--base">
                <%= item.base.toFixed(2).replace('.', ',') %>
            </div>
            <div class="table__cell--total">
                <%= item.total.toFixed(2).replace('.', ',') %>
            </div>
        </div>
    <% }) %>
    <div class="total">
        <div class="total__title">
            <%= t('pdf:total') %>
        </div>
        <div class="total__value">
            <%= user.taxGrounds.toFixed(2).replace('.', ',') %>
        </div>
    </div>
    <h2><%= t('pdf:taxTotal.constructions') %></h2>
    <div class="table">
        <div class="table__title table__title--wide"><%= t('pdf:table.subject') %></div>
        <div class="table__title table__title--base"><%- t('pdf:table.base') %></div>
        <div class="table__title table__title--total"><%= t('pdf:table.total') %></div>
    </div>
    <% user.taxDetails.filter(item => item.type === 'CONSTRUCTION').forEach(item => {%>
        <div class="table">
            <div class="table__cell table__cell--wide">
                <%= t('pdf:' + item.name) %>
                <%= t('pdf:' + item.description) %>
            </div>
            <div class="table__cell--base">
                <%= item.base.toFixed(2).replace('.', ',') %>
            </div>
            <div class="table__cell--total">
                <%= item.total.toFixed(2).replace('.', ',') %>
            </div>
        </div>
    <% }) %>
    <div class="total">
        <div class="total__title">
            <%= t('pdf:total') %>
        </div>
        <div class="total__value">
            <%= user.taxConstructions.toFixed(2).replace('.', ',') %>
        </div>
    </div>
    <h2><%= t('pdf:taxTotal.apartments') %></h2>
    <div class="table">
        <div class="table__title table__title--wide"><%= t('pdf:table.subject') %></div>
        <div class="table__title table__title--base"><%- t('pdf:table.base') %></div>
        <div class="table__title table__title--total"><%= t('pdf:table.total') %></div>
    </div>
    <% user.taxDetails.filter(item => item.type === 'APARTMENT').forEach(item => {%>
        <div class="table">
            <div class="table__cell table__cell--wide">
                <%= t('pdf:' + item.name) %>
                <%= t('pdf:' + item.description) %>
            </div>
            <div class="table__cell--base">
                <%= item.base.toFixed(2).replace('.', ',') %>
            </div>
            <div class="table__cell--total">
                <%= item.total.toFixed(2).replace('.', ',') %>
            </div>
        </div>
    <% }) %>
    <div class="total">
        <div class="total__title">
            <%= t('pdf:total') %>
        </div>
        <div class="total__value">
            <%= user.taxApartments.toFixed(2).replace('.', ',') %>
        </div>
    </div>
</body>
</html>
