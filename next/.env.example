# OAuth Configuration
# Base URL for OAuth endpoints (this Next.js app)
OAUTH_BASE_URL=https://konto.bratislava.sk

# Nest City Account Backend URL
NEST_CITY_ACCOUNT_URL=https://nest-city-account.bratislava.sk

# AWS Cognito Configuration (should already exist in your setup)
AWS_COGNITO_REGION=eu-central-1
AWS_COGNITO_USERPOOL_ID=your-user-pool-id

# Optional: Custom Cognito domain (if not using default hosted UI)
# OAUTH_COGNITO_DOMAIN=https://your-custom-domain.auth.eu-central-1.amazoncognito.com

# Partner OAuth Configurations
# DPB Partner
OAUTH_DPB_CLIENT_ID=dpb-client-id
OAUTH_DPB_CLIENT_SECRET=dpb-client-secret-shared-with-partner
OAUTH_DPB_REDIRECT_URIS=https://dpb.example.com/callback,https://dpb.example.com/other-callback

# MPA Partner
OAUTH_MPA_CLIENT_ID=mpa-client-id
OAUTH_MPA_CLIENT_SECRET=mpa-client-secret-shared-with-partner
OAUTH_MPA_REDIRECT_URIS=https://mpa.example.com/callback
